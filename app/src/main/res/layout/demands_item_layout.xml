<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="130dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDemandTitle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:inputType="text"
        android:maxLines="1"
        android:text="نیازمند همخانه آقا"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtDemandDescription"
        android:layout_width="match_parent"
        android:gravity="center|top|right"
        android:layout_below="@id/txtDemandTitle"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:lineSpacingExtra="3dp"
        android:maxLines="3"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد."
        android:layout_height="70dp"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>