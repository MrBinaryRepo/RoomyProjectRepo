<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    tools:context=".view.activity.AuthorizationActivity">
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/round_border_shape"
        android:id="@+id/edtUserPhoneNumber"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:lines="1"
        android:maxLength="11"
        android:inputType="phone"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="13sp"
        android:hint="@string/string_enter_mobile"
        android:layout_marginRight="40dp"
        android:layout_height="40dp"/>
    <Button
        android:layout_below="@id/edtUserPhoneNumber"
        android:id="@+id/btnAuthorization"
        android:background="@drawable/round_solid_shape"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:textColor="@color/white"
        android:text="@string/string_step_to_activate"
        android:layout_height="40dp"/>
</RelativeLayout>