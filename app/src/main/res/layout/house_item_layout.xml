<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgHouseImage"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="120dp"
                    android:background="@drawable/container_shape_no_color"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/sample_img" />

            <RelativeLayout
                android:id="@+id/relInfo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/txtHouseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:text="خوابگاه فضیلت"
                    android:textColor="@color/gray900"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp" />

                <com.app.roomy.util.customViews.preLolipopViews.TextView.PreLollipopTextView
                    android:id="@+id/txtHouseRegisterTime"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center|right"
                    app:drawableRight="@drawable/ic_timer"
                    android:drawablePadding="3dp"
                    android:padding="5dp"
                    android:layout_above="@id/txtHouseLocation"
                    android:text="نیم ساعت پیش"
                    android:textColor="@color/gray900"
                    android:textSize="12sp" />

                <com.app.roomy.util.customViews.preLolipopViews.TextView.PreLollipopTextView
                    android:layout_width="wrap_content"
                    android:text="میدان فردوسی"
                    android:gravity="center"
                    app:drawableRight="@drawable/ic_location"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:id="@+id/txtHouseLocation"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:drawablePadding="3dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>